<div class="wrapper row">
  <div class="page-width feature-row">
    <div class="feature-row__item grid-press__item">
      {% if section.settings.image_1 != blank %}
      <noscript>
        {{ section.settings.image_1 | img_url: '600x600' | img_tag: section.settings.image.alt, 'feature-row__image-no-js' }}
      </noscript>
      <div class="feature-row__image-wrapper" style="padding-top:75%;">
        {% assign img_url = section.settings.image_1 | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="feature-row__image lazyload"
             src="{{ section.settings.image_1 | img_url: '300x300' }}"
             data-src="{{ img_url }}"
             data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ section.settings.image_1.aspect_ratio }}"
             data-sizes="auto"
             alt="{{ section.settings.image_1.alt | escape }}">
      </div>
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}

      <div class="feature-row__text">
        {% if section.settings.press_link_1 != blank and section.settings.press_label_1 != blank %}
        <a href= "{{section.settings.press_link_1}}"> 
          {{section.settings.press_label_1 | escape}}
        </a>
        {% endif %}
        {% if section.settings.press_label_desc_1 != blank %}
        <span> 
          {{section.settings.press_label_desc_1}}
        </span>
        {% endif %}        
      </div>
    </div>
    <div class="feature-row__item grid-press__item">
      {% if section.settings.image_2 != blank %}
      <noscript>
        {{ section.settings.image_2 | img_url: '600x600' | img_tag: section.settings.image_2.alt, 'feature-row__image-no-js' }}
