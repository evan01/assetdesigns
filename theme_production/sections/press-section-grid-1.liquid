             src="{{ section.settings.image_2 | img_url: '300x300' }}"
             data-src="{{ img_url }}"
             data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
             data-aspectratio="{{ section.settings.image_2.aspect_ratio }}"
             data-sizes="auto"
             alt="{{ section.settings.image_2.alt | escape }}">
      </div>
      {% else %}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}

      <div class="feature-row__text">
        {% if section.settings.press_link_2 != blank and section.settings.press_label_2 != blank %}
        <a href= "{{section.settings.press_link_2}}"> 
          {{section.settings.press_label_2 | escape}}
        </a>
        {% endif %}
        {% if section.settings.press_label_desc_2 != blank %}
        <span> {{section.settings.press_label_desc_2}}</span>
        {% endif %}
      </div>
    </div>
    <div class="feature-row__item grid-press__item">
      {% if section.settings.image_3 != blank %}
      <noscript>
        {{ section.settings.image_3 | img_url: '600x600' | img_tag: section.settings.image_3.alt, 'feature-row__image-no-js' }}
