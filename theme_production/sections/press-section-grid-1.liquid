{% stylesheet %}

.row {
	margin-bottom: 20px;
	height: 400px;
}

.row .feature-row {
	align-items: flex-start;
}

.row .grid-press__item {
	margin: 0 20px;
}

.row .feature-row__text {
	text-align: center;
	padding-bottom: 15px;
	padding-top: 15px;
}

.row .feature-row__image-wrapper > img {
	height: 200px;
	width: auto;
}

.row .feature-row__text > a {
	text-decoration: underline;
	font-size: 14px;
}

.row .feature-row__text > span {
	display: block;
	font-size: 11px;
	margin-top: 10px;
}

