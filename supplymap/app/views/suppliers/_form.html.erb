<%= form_for @supplier do |s| %>
  <table>
    <tr>
      <th><%= s.label :name %></th>
      <th><%= s.text_field :name %></th>
    </tr>
    <tr>
      <th><%= s.label :description %></th>
      <th><%= s.text_field :description %></th>
    </tr>
    <tr>
      <th><%= s.label :lattitude %></th>
      <th><%= s.text_field :lattitude %></th>
    </tr>
    <tr>
      <th><%= s.label :longitude %></th>
      <th><%= s.text_field :longitude %></th>
    </tr>
  </table>
  
  <p><button class="btn btn-success" type="submit">Save</button> </p>
<% end %> 