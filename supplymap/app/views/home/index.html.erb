<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>Suppliers</h4>
    </div>
    <div class="col-md-6">
      <h4>Supply Chains</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="list-group">
        <%= Supplier.find_each do |s| %>
        <div class="media list-group-item list-group-item-action flex-column align-items-start">
          <div class="media-left">
            <% if s.image.file? %>
              <%= image_tag s.image.url, class: "img-responsive", :size => "180x124", :crop => :fill%>
            <% end %>
            <h4 class="list-group-item-heading"><%= s.name %></h4>
            <p class="list-group-item-text">Location: Lat <%= s.lattitude %> Long <%= s.longitude %> </p>
            <p class="list-group-item-text">Description: <%= s.description %></p>
            <%= link_to edit_supplier_path(s), class: "btn btn-primary btn-sm" do %>
              <span> Edit Supplier </span>
            <% end %>
          </div>
        </div>
        <a href="#" class="list-group-item active">
          <!-- <%= image_tag s.image.url, class: "img-thumbnail" %> -->
          <h4 class="list-group-item-heading">First List Group Item Heading</h4>
          <p class="list-group-item-text">List Group Item Text</p>
        </a>
        <% end %>
      </div>

    </div>
    <div class="col-md-6">
      <div class="list-group">
        <%= SupplyChain.find_each do |s| %>
        <div class="media list-group-item list-group-item-action flex-column align-items-start">
          <h4 class="list-group-item-heading"><%= s.name %> </h4>
          <h4 class="list-group-item-heading">From  <%= s.getOriginSupplier %>: to <%= s.getFinalSupplier %></h4>
          <p class="list-group-item-text">Total CO2 Emission: <%=  s.getTotalCO2Emissions %></p>
          <p class="list-group-item-text">Total Distance: <%=  s.getTotalDistance %></p>
					<%= link_to supply_chain_path(s), class: "btn btn-primary btn-sm" do %>
        		<span> Edit Supply Chain </span>
        	<% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
